{% extends 'base.html.twig' %}

{% block title %}Sondage{% endblock %}

{% block body %}
    <h1>Sondage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sondage.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sondage.nom }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ sondage.introduction }}</td>
            </tr>
            <tr>
                <th>Visibilite</th>
                <td>{{ sondage.visibilite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ sondage.datecreation ? sondage.datecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sondage_index') }}">back to list</a>

    <a href="{{ path('app_sondage_edit', {'id': sondage.id}) }}">edit</a>

    {{ include('sondage/_delete_form.html.twig') }}
{% endblock %}
